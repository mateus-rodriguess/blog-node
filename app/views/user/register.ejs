<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
        <title>Blog</title>
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>

    <div class="container">
        <%- include('../partials/msg'); %>
        <div>
            <% if (typeof erros !=='undefined' && erros.length> 0) { %>
                <% for (var i=0; i < erros.length; i++) { %>
                    <div class="alert alert-danger">
                        <%= erros[i].text %>
                    </div>
                <% } %>
            <% } %>
        </div>
        <div class="card">
            <div class="card-body">
                <form action="/account/register" method="POST">
                    <div class="mb-3">
                        <legend>Criar um usuario</legend>
                        <label for="first_name" class="form-label">Primeiro nome</label>
                        <input type="text" id="first_name" name="first_name" class="form-control" placeholder="Primeiro nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="last_name" class="form-label">Sobrenome</label>
                        <input type="text" id="last_name" class="form-control" name="last_name" placeholder="Segundo nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" class="form-control" name="email" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password1" class="form-label">Senha</label>
                        <input type="password" id="password1" name="password1" class="form-control" placeholder="Senha" required>
    
                    </div>
                    <div class="mb-3">
                        <label for="password2" class="form-label">Confirma senha</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirmar senha" required>
                    </div>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </form>
                <a href="/account/login">JÃ¡ tenho conta</a>
            </div>
        </div>
    </div>
</body>
<script src="/js/bootstrap.min.js"></script>

</html>