<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
        <title>Edit post</title>
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>

    <div class="container">
        <%- include('../partials/msg'); %>
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/admin/post/edit/">
                    <input type="hidden" name="id" value="<%= post._id %>">
                    <legend>Editar categoria: <%= post.name %></legend>

                    <div>
                        <% if (typeof erros !=='undefined' && erros.length> 0) { %>
                            <% for (var i=0; i < erros.length; i++) { %>
                                <div class="alert alert-danger">
                                    <%= erros[i].text %>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Titulo</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Titulo"
                            value="<%= post.title %>">
                    </div>
                    <div class="mb-3">
                        <label for="slug" class="form-label">Slug</label>
                        <input type="text" class="form-control" id="slug" name="slug"
                            placeholder="slug da categoria" value="<%= post.slug %>">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Descrição</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="Descrição"
                            value="<%= post.description %>">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Conteudo</label>
                        <input type="text" class="form-control" id="content" name="content" placeholder="Conteudo"
                            value="<%= post.content %>">
                    </div>
                    <div class="md-3">
                        <label for="category">Categorias</label>
                        <select name="category" id="category"  class="form-control" required %>">
                            <% if (typeof category !=='undefined' && category.length> 0) { %>
                                <% for (var i=0; i < category.length; i++) { %>
                                    <option value="<%= category[i]._id %>"> <%= category[i].name %></option>
                                <% } %>
                           
                            <% } else{ %>  
                                <option value="0"> nenhuma categoria registrada</option>
                             <% } %>%>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </div>

</body>
<script src="/js/bootstrap.min.js"></script>

</html>